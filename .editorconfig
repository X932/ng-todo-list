# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
quote_type = double
max_line_length = 60

[*.scss]
quote_type = double
max_line_length = 50


[*.ts]
quote_type = double
max_line_length = 60

[*.md]
max_line_length = off
trim_trailing_whitespace = false
